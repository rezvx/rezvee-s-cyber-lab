{
  "compilerOptions": {
    /* Language & runtime */
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react-jsx",

    /* Module system */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,

    /* Environment typing (IMPORTANT) */
    "types": ["vite/client"],

    /* Project structure */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    /* Type checking (kept relaxed, as you had) */
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src"]
}